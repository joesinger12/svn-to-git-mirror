// Total
RULE ResOtherZn:MinExhCFM
  INPUTCLASS
    NotInput
  UNITS
    cfm
  DEFAULT
    if(VentSpcFunc = "- specify -" .OR. IfValidAnd(Area > 0) = 0) then
      0
    else
      Area * CodeExhPerArea + ValidOr(ExhNumFixtures, 0) * CodeExhPerFixture
    endif
ENDRULE

// ********** Parking Garage Fan ******************************
RULE ResOtherZn:PrkgGarExhFlow
  INPUTCLASS
    NotInput
  UNITS
    cfm
  DEFAULT
    if(SpcFunc = "Parking Garage Area (Parking Zone and Ramps)" .OR.
       SpcFunc = "Parking Garage Area (Daylight Adaptation Zones)") then
      MinExhCFM
    else
      0
    endif
ENDRULE

RULE ResOtherZn:PrkgGarExhFanPwr
  INPUTCLASS
    NotInput
  UNITS
    W/cfm
  DEFAULT
    if(SpcFunc = "Parking Garage Area (Parking Zone and Ramps)" .OR.
       SpcFunc = "Parking Garage Area (Daylight Adaptation Zones)") then
      0.35
    else
      0
    endif
ENDRULE

RULE ResOtherZn:ExhstOutsideOpening
  INPUTCLASS
    Prescribed
  UNITS
    ft2
  DEFAULT
    if(VentSpcFunc != "Exhaust - Parking garages") then
      0
    else if(Area <= 200) then
      63
    else if(Area <= 400) then
      126
    else
      200
    endif endif endif
ENDRULE

// ------------------- Total Zone Exhaust Flow Rate ------------------------------------------
RULE ResOtherZn:TotalExhCFM
  DESCRIPTION
     "Total zone exhaust flow rate."
  INPUTCLASS
    NotInput
  DEFAULT : T24N
    if(SpcFunc = "Parking Garage Area (Parking Zone and Ramps)" .OR.
       SpcFunc = "Parking Garage Area (Daylight Adaptation Zones)") then
      PrkgGarExhFlow
    else if(ServedByAirSys > 0) then ; air system
      ValidOr(ActiveHVACSystem:ExhFanCap, 0)
    else if(EnumValue(IAQOption) >= 11 .AND. EnumValue(IAQOption) <= 15) then ; central ventilation system
      ValidOr( CentralExhaustCFM, 0)
    else ; individual IAQ fans / default minimum
      IAQHRVCFM + IAQCFM_Exhaust
    endif endif endif
  CHECKCODE
    if(IAQDisabled > 0 .OR. ResProj:RunScope != "Newly Constructed") then
      UNCHANGED
    else if(IfValidAnd(MinExhCFM > 0) .AND. IfValidAnd(TotalExhCFM < (MinExhCFM - 0.05))) then
      if(ResProj:BypassRuleLimits > 0) then
        PostWarning("Minimum Exhaust NOT MET: %s required, %s entered (CFM). Review inputs for
                    ReOtherZn '%s'.", FltToStr(MinExhCFM, 1), FltToStr(TotalExhCFM, 1), Name)
      else
        PostError("Minimum Exhaust NOT MET: %s required, %s entered (CFM). Review inputs for
                   ReOtherZn '%s'.", FltToStr(MinExhCFM, 1), FltToStr(TotalExhCFM, 1), Name)
      endif
    else if(IfValidAnd(MinExhCFM > 0) .AND. IfValidAnd(TotalExhCFM > MinExhCFM * 5)) then
      PostWarning("The exhaust rate is more than 5 times of required. This might cause a
                  simulation error. Review inputs for ReOtherZn '%s'.", Name)
    else
      UNCHANGED
    endif endif endif
ENDRULE
