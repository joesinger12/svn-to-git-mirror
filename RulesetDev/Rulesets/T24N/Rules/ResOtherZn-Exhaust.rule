// ********** Code Minimum Exhaust Components ******************************
// Per Area basis
RULE  ResOtherZn:CodeExhPerArea
  DESCRIPTION
     "The code mininum amount of exhaust flow per floor area."
  INPUTCLASS
    NotInput
  UNITS
    cfm/ft2
  DEFAULT : T24N
    if(VentSpcFunc = "- specify -" .OR. IfValidAnd(Area > 0) = 0) then
      0
    else
      VentilationSpaceFunctionData:CodeExhPerArea("VentFuncType", VentSpcFunc)
    endif
ENDRULE

// Per Fixture basis
RULE ResOtherZn:CodeExhPerFixture
  DESCRIPTION
    "The code required continuous exhaust air flow rate per fixture 
     (toilet, showerhead, etc)."
  INPUTCLASS
    NotInput
  UNITS
    cfm
  DEFAULT
    if(VentSpcFunc = "- specify -") then
      0
    else
      VentilationSpaceFunctionData:CodeExhContPerFixture("VentFuncType", VentSpcFunc)
    endif
ENDRULE

